# MikeButton:

<RegisterScreen>

    MDBoxLayout:
        orientation: 'vertical'
        # md_bg_color: 'red'
        size_hint_x: .7
        size_hint_y: .3
        pos_hint: {'center_x': .5, 'center_y':  .6}
        spacing: dp(40)
        # padding: (20,20,20,20)

        MDBoxLayout:
            padding: (dp(0), dp(0), dp(0), dp(131))

            MDLabel:
                text: 'Formthotics'
                halign: 'center'
                font_name: 'fonts/OpenSans/OpenSans-Bold.ttf'
                font_size: '32sp'
                # bold: True
                theme_text_color: 'Custom'
                text_color: app.theme_cls.primary_color


        MDBoxLayout:    
            padding: (dp(0), dp(0), dp(0), dp(110))
            MDLabel:
                text: 'Станьте членом команды системы Formthotics. Делитесь своим QR кодом со знакомыми, друзьями, коллегами и родственниками и получайте вознаграждение за каждого человека'
                font_name: 'OpenSans'
                font_size: '14sp'
            
        MDBoxLayout:
            orientation: 'vertical'
            spacing: dp(10)
            # padding: (0, 50, 0, 0)

            # MDRaisedButton:
            MikeyButton:
            # MDRoundFlatButton:
                text: 'Авторизоваться'
                font_name: 'fonts/OpenSans/OpenSans-SemiBold.ttf'
                pos_hint: {'center_x': .5}
                size_hint_x: 1
                on_release: root.manager.current = 'login_screen'
                elevation: 0
                font_size: '15sp'
                rounded_button: True


            MikeyButton:
                text: 'Зарегистрироваться'
                font_name: 'fonts/OpenSans/OpenSans-SemiBold.ttf'
                font_size: '15sp'
                pos_hint: {'center_x': .5}
                size_hint_x: 1
                elevation: 0
                rounded_button: True




    MDBoxLayout:
        orientation: 'horizontal'
        spacing: 10
        
        MDTextButton:
            text: 'Failed Test'
            on_release: 
                root.manager.current = 'failed_test_screen'

        MDTextButton:
            text: 'Success Test'
            on_release: 
                root.manager.current = 'success_test_screen'



