        MDTextField:
            hint_text: 'Логин'
            mode: 'fill'
            icon_left: 'account'
            round: 40

        MDTextField:
            hint_text: 'Пароль'
            mode: 'fill'
            icon_left: 'key-variant'

        MDLabel:
            text: 'Забыли пароль?'
            font_name: 'OpenSans'
            font_size: '14sp'
            halign: 'right'
            
        # MDRaisedButton:
        MikeyButton
            text: 'Войти'
            pos_hint: {'center_x': .5}
            size_hint_x: 1
            on_release: root.register()
            elevation: 0
            font_name: 'fonts/OpenSans/OpenSans-SemiBold.ttf'
            font_size: '15sp'
            rounded_button: True



        
