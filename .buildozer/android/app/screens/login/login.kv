        # pos_hint: {'center_x': .5}
        pos_hint: {'center_y': .6, 'center_x': .5}
        # padding: (0,0,0,40)
        spacing: dp(20)

        MDBoxLayout:
            padding: (dp(0), dp(0), dp(0), dp(70))

